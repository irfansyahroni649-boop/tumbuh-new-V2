<body>
    
    <div class="container">
        <h1>Makasih orang baik</h1>

        <form id="donasiForm">
            <label for="nama">Nama Donatur:</label>
            <input type="text" id="nama" required>

            <label for="nominal">Nominal Donasi (Rp):</label>
            <input type="number" id="nominal" min="1" required>

            <label for="metode">Metode Pembayaran:</label>
            <select id="metode" required>
                <option value="">-- Pilih Metode Pembayaran --</option>
                <option value="Dana">Dana</option>
                <option value="Gopay">Gopay</option>
                <option value="BCA">BCA</option>
                <option value="Mandiri">Mandiri</option>
            </select>

            <button type="submit">Tambah Donasi</button>
        </form>

        <h2>Daftar Donasi</h2>
        <ul id="daftarDonasi"></ul>

        <div class="total" id="totalDonasi">Total Donasi: Rp0</div>
    </div>
    <div class="donation-container">
    <div class="donation-form">
        <!-- isi form donasi di sini -->
    </div>
    <script>
        let donasiList = [];

        const logoMap = {
            "Dana": "img2/dana.jpg",
            "Gopay": "img2/gopay.jpg",
            "BCA": "img2/images.png",
            "Mandiri": "img2/logo-livin.jpg"
        };

        const form = document.getElementById('donasiForm');
        const daftar = document.getElementById('daftarDonasi');
        const totalDiv = document.getElementById('totalDonasi');

        form.addEventListener('submit', function(event) {
            event.preventDefault();

            const nama = document.getElementById('nama').value.trim();
            const nominal = parseFloat(document.getElementById('nominal').value);
            const metode = document.getElementById('metode').value;

            if (!nama || !metode || nominal <= 0) {
                alert('Harap lengkapi semua data!');
                return;
            }

            donasiList.push({ nama, nominal, metode });

            form.reset();
            updateDisplay();
        });

        function updateDisplay() {
            daftar.innerHTML = '';
            let total = 0;

            donasiList.forEach(d => {
                const li = document.createElement('li');

                li.innerHTML = `
                    <img src="${logoMap[d.metode]}" class="logo">
                    <div>
                        <strong>${d.nama}</strong><br>
                        Rp${d.nominal.toLocaleString('id-ID')} â€” <em>${d.metode}</em>
                    </div>
                `;

                daftar.appendChild(li);
                total += d.nominal;
            });

            totalDiv.textContent = `Total Donasi: Rp${total.toLocaleString('id-ID')}`;
        }
    </script>
    
